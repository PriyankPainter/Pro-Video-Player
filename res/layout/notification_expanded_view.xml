<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@color/colorBlackTransparentDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notiThumb"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@mipmap/app_icon_round" />

            <TextView
                android:id="@+id/notiSongName"
                style="@style/TextAppearance.Compat.Notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_toStartOf="@+id/notificationClose"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingEnd="16dp"
                android:text="Media Is Playing"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/notificationClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_40sdp">

            <ImageView
                android:id="@+id/notificationPrev"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/textView22"
                android:layout_toEndOf="@+id/imageView2"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_prev" />

            <ImageView
                android:id="@+id/notificationPause"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@+id/notificationPrev"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/notificationPrev"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_pause" />

            <ImageView
                android:id="@+id/notitificationNext"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignTop="@+id/notificationPause"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/notificationPause"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_next" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
