<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/LI_SS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bg_speed">
        <!--        android:background="@color/colorBlackTransparent"-->

        <ImageView
            android:id="@+id/di_ss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            tools:srcCompat="@mipmap/app_icon_round"
            android:padding="@dimen/_1sdp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivCloseSS"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/bg_rounded_black_transparent"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_close_black_24dp"
            app:tint="@color/colorWhite"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/di_ss"
            android:layout_marginBottom="@dimen/_25sdp">

            <TextView
                android:id="@+id/tvShareSS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_bordered_black_transparent"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="@string/lbl_share"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tvSaveSS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_bordered_black_transparent"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="@string/lbl_save"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
