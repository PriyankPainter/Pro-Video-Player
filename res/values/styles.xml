<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--        Theme.AppCompat.Light.NoActionBar
Theme.MaterialComponents.DayNight.NoActionBar-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>-->
        <item name="materialAlertDialogTheme">@style/AlertDialogMaterialTheme</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
<!--        AlertDialogMaterialTheme
            AlertDialogTheme1-->
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.Icon</item>
    </style>

    <style name="checkboxTheme">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="buttonTint">@color/colorWhite</item>
    </style>

    <style name="MainTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
    </style>

    <style name="SubTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorWhiteTransparentLight</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
    </style>

    <style name="FolderTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/worksans_regular</item>
    </style>

    <style name="ActionButton.Overflow.Icon" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorWhite</item>
    </style>


    <style name="materialAlertDialogAnimation" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>


    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>


    <style name="AppTheme.AppBarOverlay"/>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.PopupOverlay"/>


    <style name="CustomSwitch">
        <item name="android:colorForeground">#383838</item>
        <item name="colorControlActivated">#c95e5e</item>
        <item name="colorSwitchThumbNormal">#565656</item>
    </style>

    <style name="redTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#ff3232</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#fa0c0c</item>
    </style>
    <style name="secondTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#436ef6</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#436ef6</item>
    </style>






    <style name="AlertDialogMaterialTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/colorBlue</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="rippleColor">@color/colorBlue</item>
    </style>




    <style name="AlertDialogTheme1" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive1</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral1</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral1</item>
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="Alert.Button.Positive1" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/colorBlue</item>
    </style>

    <style name="Alert.Button.Neutral1" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="rippleColor">@color/colorBlue</item>
    </style>
</resources>
